<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lineprogressbutton.fewwind.myapplication.activity.AnimActivity"
    tools:showIn="@layout/activity_anim">

    <TextView
        android:textSize="16sp"
        android:textColor="#fff"
        android:padding="8dp"
        android:text="圆角矩形"
        android:background="@drawable/rectangle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.lineprogressbutton.fewwind.myapplication.view.TestImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        ></com.lineprogressbutton.fewwind.myapplication.view.TestImageView>

    <ImageView
        android:id="@+id/id_anim_ball"
        android:src="@drawable/circle"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_anim_iv"
            android:src="@drawable/icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
