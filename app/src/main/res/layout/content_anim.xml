<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lineprogressbutton.fewwind.myapplication.activity.AnimActivity"
    tools:showIn="@layout/activity_anim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#fff"
            android:padding="8dp"
            android:text="圆角矩形"
            android:background="@drawable/rectangle_two"/>

        <com.lineprogressbutton.fewwind.myapplication.view.TestImageView
            android:layout_width="100dp"
            android:layout_height="100dp"></com.lineprogressbutton.fewwind.myapplication.view.TestImageView>

        <ImageView
            android:id="@+id/id_anim_ball"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/circle"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/id_anim_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/icon2"/>
            <com.lineprogressbutton.fewwind.myapplication.view.LeiDaView
                android:layout_gravity="right"
                android:background="#fff"
                android:id="@+id/id_leida"
                android:layout_width="150dp"
                android:layout_height="150dp"></com.lineprogressbutton.fewwind.myapplication.view.LeiDaView>
        </android.support.v7.widget.CardView>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</ScrollView>
